<html>

<head>
    <title>EMPRESU</title>
    <% include ../partes/imports%>

</head>

<body>
    <% include ../partes/header %>
   
        <div class="container">
        <%if (message.length > 0) { %>
         <div class="row"> 
             <div class="col s12 ">
                <div class="card-panel teal">
                <span class="white-text"><%=message%> </span>
                </div>
            </div>
        </div>
        <%}%>
            <div class="row">
            <h4> Iniciar Secion</h4>
                <form method='POST'class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" name='username'class="validate">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" name='password' type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <button type='submit'class="btn green">INGRESAR</button>
                        </div>
                    </div>
                    
                </form>
            </div>
             <%if (authmessage.length > 0) { %>
         <div class="row"> 
             <div class="col s12 ">
                <div class="card-panel red">
                <span class="white-text"><%=message%> </span>
                </div>
            </div>
        </div>
        <%}%>
        </div>


</body>

</html>